<%%= show_section_label %>
<% columns = klass.content_columns.dup -%> 
<%%=
  present :elegant do |p|
    p.header do |r|
      r.field '<%= columns.first.name.humanize %>', @resource.<%= columns.shift.name %>
    end
<% unless columns.empty? -%>
    p.body do |r|
<% columns.each do |column| -%>
      r.field '<%= column.name.humanize %>', @resource.<%= column.name %>
<% end -%>
    end
<% end -%>
    p.actions do |r|
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
<%%# Esta secciÃ³n se puede borrar si no es necesaria -%>
<%% if false %>
<%% content_for :support do %>    
  <%% support_bar do %>
    <%%= option_link :caption => 'Link to another resource', :url => some_resource_path(@resource) %>
  <%% end %>   
<%% end %>
<%% end %>
